    <text>{{title}}</text>
    <text>查看更多</text>
  </view>
  <navigator url="{{'../../pages/detail/detail?id='+item._id}}" class="book-model" wx:for="{{msg}}" wx:key='index'> 
    <image src="http://statics.zhuishushenqi.com{{item.cover}}"></image>
